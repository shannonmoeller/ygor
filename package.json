{
  "name": "@ygor/monorepo",
  "private": true,
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "homepage": "https://github.com/shannonmoeller/ygor#readme",
  "repository": "shannonmoeller/ygor",
  "license": "MIT",
  "scripts": {
    "build": "run-s build-*",
    "build-clean": "lerna exec -- del dist",
    "build-node": "lerna exec -- babel src -d dist",
    "lint": "run-s lint-*",
    "lint-eslint": "eslint --ignore-path .gitignore --fix '**/*.js'",
    "lint-prettier": "prettier --ignore-path .gitignore --write '**/*.{css,js}'",
    "lint-stylelint": "stylelint --ignore-path .gitignore --fix '**/*.css'",
    "test": "nyc run-s test-*",
    "test-node": "NODE_ENV=test blue-tape -r babel-polyfill -r babel-register 'packages/*/test/*.js' | tap-diff",
    "report": "nyc report -r text-lcov | coveralls",
    "precommit": "run-s lint test build && git add .",
    "pretest": "run-s lint",
    "publish": "run-s precommit && lerna publish",
    "publish-beta": "run-s precommit && lerna publish --cd-version=prerelease --preid=beta --npm-tag=beta",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-whim": "^3.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "mock-fs": "^4.4.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.3.0",
    "prettier": "^1.9.2",
    "stylelint": "^8.4.0",
    "stylelint-config-prettier": "^2.0.0",
    "stylelint-config-whim": "^4.0.1",
    "tap-diff": "^0.1.1"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": false,
            "node": 6
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-whim",
      "eslint-config-prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "useTabs": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-whim",
      "stylelint-config-prettier"
    ]
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "**/src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  }
}
