{
  "name": "@ygor/monorepo",
  "private": true,
  "scripts": {
    "build": "run-s build-*",
    "build-clean": "lerna exec -- del dist",
    "build-node": "lerna exec -- babel src -d dist",
    "lint": "run-s lint-*",
    "lint-prettier": "prettier --ignore-path .gitignore --write \"**/*.{css,js}\"",
    "lint-eslint": "eslint --ignore-path .gitignore --fix \"**/*.js\"",
    "test": "nyc run-s test-*",
    "test-node": "cross-env NODE_ENV=test blue-tape -r babel-register \"packages/*/test/*.js\" | tap-diff",
    "report": "nyc report -r text-lcov | coveralls",
    "precommit": "run-s test && git add .",
    "pretest": "run-s lint build",
    "publish": "run-s precommit && lerna publish",
    "publish-beta": "run-s precommit && lerna publish --preid=beta --npm-tag=beta",
    "postinstall": "lerna bootstrap"
  },
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "homepage": "https://github.com/shannonmoeller/ygor#readme",
  "repository": "shannonmoeller/ygor",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-whim": "^1.0.0-9",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "del-cli": "^1.1.0",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-whim": "^3.1.0-9",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "mock-fs": "^4.4.2",
    "mute": "^2.0.6",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "tap-diff": "^0.1.1"
  },
  "babel": {
    "presets": [
      "babel-preset-whim"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "useTabs": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-whim",
      "eslint-config-prettier"
    ]
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "**/src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "engines": {
    "node": ">= 6",
    "npm": ">= 3"
  }
}
